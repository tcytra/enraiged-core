{
    "name": "tcytra/enraiged-core",
    "description": "Enraiged Core provides the authentication systems required by Enraiged Laravel projects.",
    "keywords": ["core", "enraiged"],
    "homepage": "https://github.com/tcytra/enraiged-core",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Todd Cytra",
            "email": "tcytra@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "laravel/framework": "^12.49",
        "tcytra/enraiged-avatars": "^0.4",
        "tcytra/enraiged-forms": "^0.3",
        "tcytra/enraiged-support": "^0.4",
        "tcytra/enraiged-tables": "^0.3"
    },
    "autoload": {
        "psr-4": {
            "Enraiged\\": "src/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "rm resources/views/welcome.blade.php",
            "rm database/factories/UserFactory.php",
            "rmdir database/factories",
            "@php artisan vendor:publish --tag=enraiged-core --ansi --force",
            "@php artisan vendor:publish --tag=enraiged-avatars --ansi --force",
            "@php artisan vendor:publish --tag=enraiged-files --ansi --force"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Enraiged\\CoreServiceProvider",
                "Enraiged\\UserServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
